<div class = "container">
  <div class = "row">
    <div class="col">
      <% @pools.each do |pool|%>

        <div class ="col image-container shadow p-3 m-5 bg-white ">
        <p><%= pool.name %></p>
        <img src="<%= pool.url_photo %>" alt="Image de <%= pool.name %>"  class = "img-rental">
          <div class = "pt-2">
            <%= button_to "delete my pool", pool_path(pool), method: :delete, class: 'form btn btn-primary rounded-pill'%>
          </div>
        </div>
        <% pool.bookings.each do |poolBooking| %>
        <p><%= pool.name %></p>
        <p><%= poolBooking.start_date %></p>
        <p><%= poolBooking.end_date %></p>
        <%= button_to "validated booking", validate_booking_path(poolBooking), method: :patch %>
        <%= button_to "reject booking", reject_booking_path(poolBooking), method: :patch %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
