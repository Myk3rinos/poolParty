<%= render "shared/navbar" %>
<div class="content">
  <div class="card">
    <article class="article">
    <div class="image-container">
      <img src="<%= @pool.url_photo %>" alt="Image of <%= @pool.name %>">
    </div>
    <div class="details-container">
      <h2><%= @pool.name %></h2>
      <p><%= @pool.description %></p>
      <p>Prix : <%= @pool.price %> €</p>
      <p>Évaluation : <%= @pool.rating %></p>
      <p>Capacité : <%= @pool.max_people %> personnes</p>
      <p>Ville : <%= @pool.address %></p>
    </div>
    <button>Rent</button>
    <%# <%= render "form", pool: @pool %> %>
    <div data-controller="five-stars" data-five-stars-target="stars">

    </div>
    </article>


    <%= simple_form_for @pool do |f| %>
      <%= f.error_notification %>
      <%# <%= f.error_notification message: f.object.errors[:base].to_sentence if %> %>
      <%= f.input :name%>
      <%= f.input :address%>
      <%# <%= f.input :opening_date, input_html: { date: { controller: "datepickr" } } %> %>
      <div class="form">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
