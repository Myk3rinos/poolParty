<%# <%= render "shared/navbar", list: @list, bookmark: @bookmark %>
<%= render "shared/navbar" %>


<div class="search-container">
<%= form_with url: root_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Place"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
</div>

<section class="listings">
  <% @pools.each do |pool| %>

    <%# <%= pool_path(pool), class: 'button button-center' do %>
    <%= link_to pool_path(pool), class: 'article-index' do %>

    <article>
      <img src="<%= pool.url_photo %>" alt="Image de <%= pool.name %>">
      <div class="left-right">
      <h2><%= pool.name %></h2>
      <h2><%= pool.price %> â‚¬</h2>
      </div>
      <div class="left-right">
      <p><%= pool.rating %>/5</p>


      <% if (pool.rating != nil)  %>
        <% pool.rating.times do %>
          <i class="fa-solid fa-star" style="color: #e5c006;"></i>
        <% end %>
      <% end %>


      <p><%= pool.max_people %><i class="fa-solid fa-user"></i></i></p>
      </div>
        <p>
          <i class="fa-solid fa-city"></i>
          <span class="separator"></span>
          <%= pool.address %>
        </p>
      </div>
      <p><%= pool.description %></p>
    </article>

    <% end %>

  <% end %>
</section>


<%= render "shared/footer" %>
