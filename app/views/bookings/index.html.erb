<%= render "shared/navbar" %>

<h1>Book your favourite pool</h1>

<div class="card-wrapper">
  <% @bookings.each do |booking|%>
    <div class="card">
      <img src="<%= booking.pool.url_photo %>" alt="Image de <%= booking.pool.name %>">
      <h2><%= booking.pool.name %></h2>
      <%= button_to "Cancel booking", booking_path(booking), method: :delete, class: 'cancel-button' %>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>
